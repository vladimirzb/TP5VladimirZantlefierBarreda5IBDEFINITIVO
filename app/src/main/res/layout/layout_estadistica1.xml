<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tituloatributos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atributos elegidos"
        android:textSize="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/textviewbarbaAtributoEstadistica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barba"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloatributos"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textviewSonrisaEstadis1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Sonrisa"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/textviewbarbaAtributoEstadistica"
        app:layout_constraintTop_toBottomOf="@+id/tituloatributos"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textviewEstadoAnimeEstadis"
        android:text="Estado de animo"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textviewbarbaAtributoEstadistica"
        app:layout_constraintTop_toBottomOf="@+id/tituloatributos" />

</androidx.constraintlayout.widget.ConstraintLayout>